<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="@android:color/black" />

    </FrameLayout>

    <!-- Questions TextView -->
    <TextView
        android:id="@+id/tv_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout2"
        android:padding="8dp"
        android:textColor="#E10A0A"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppinsbold"
        android:textSize="16sp"
        android:text="Question points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <TextView
        android:id="@+id/tv2_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout2"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Gained points"
        android:textColor="#E10A0A"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/qimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_points" />


    <ImageView
        android:id="@+id/qimage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/questions_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_points" />

    <TextView
        android:id="@+id/questions_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout2"
        android:padding="8dp"
        android:text="Questions will be displayed here"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <Button
        android:id="@+id/next_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Next Question"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout55"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/end_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/red"
        android:text="End Quiz"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout55"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/check_answer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#FFC107"
        android:text="Check answer"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout55"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="top"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>

    </FrameLayout>


    <RadioGroup
        android:id="@+id/checkbox_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/check_answer_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questions_text_view">

        <!-- RadioButton A -->
        <RadioButton
            android:id="@+id/answer_a_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="A" />

        <!-- RadioButton B -->
        <RadioButton
            android:id="@+id/answer_b_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="B" />

        <!-- RadioButton C -->
        <RadioButton
            android:id="@+id/answer_c_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="C" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>



